<h1>Update Figure</h1>

<form method="POST" action="/figures/<%= @figure.id %>">
  <input type="hidden" id="hidden" name="_method" value="PATCH"/>
  <label for="figure_name">Name</label> 
  <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>"/>

  <h2>Titles</h2>
  <% @titles.each do |title| %>
    <input type="checkbox" <%='checked' if @figure.titles.include?(title) %> id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>"/><%= title.name %><br>
  <% end %>
  <br>
  <label for="new_title">Create New Title:</label>
  <input type="text" id="new_title" name="title[name]"/>

  <h2>Landmarks</h2>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"/><%= landmark.name %><br>
  <% end %>

  <h2>Create New Landmark:</h2>
  <label for="new_landmark">Name:</label>
  <input type="text" id="new_landmark" name="landmark[name]"/>
  <label for="landmark_year">Name:</label>
  <input type="text" id="landmark_year" name="landmark[year_completed]"/>

  <input type="submit" id="submit" value="Edit Figure"/>
</form>